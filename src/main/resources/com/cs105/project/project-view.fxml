<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs105.project.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ImageView fx:id="robot" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />

    <Label fx:id="welcomeText" />
    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
        <Button fx:id="escape" mnemonicParsing="false" text="躲避" />
        <Button fx:id="forward" mnemonicParsing="false" text="前进" />
    </HBox>
    <Button fx:id="start" onAction="#onHelloButtonClick" text="开始" />
</VBox>
